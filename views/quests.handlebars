{{!-- If a user is logged in, show this button --}}
{{#if loggedIn}}
<button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#add-quest" style="display: block; margin: 0 auto;">
    Create a new Quest!
</button>
{{/if}}
{{!-- For every quest in the database, create these elements --}}
{{#each questDataPlain as |quest|}}
<a href="/quests/{{quest.id}}" style="text-decoration: none;">
    <div class="card menu-card">             
        <div style="display: flex; flex-direction: row; justify-content: space-around">
            <h3 style="color: red;">{{quest.name}}</h3>
            <a href="/users/{{quest.author}}" style="text-decoration: none; color: red;">
                <h3>Created by: {{quest.author}}</h3>
            </a>
        </div>
        <p style="text-align: center;">{{quest.description}}</p>
    </div>
</a>
{{/each}}

{{!-- If a user is logged in, add the add-quest-modal to the page --}}
{{#if loggedIn}}
{{> add-quest-modal}}
{{/if}}