<div class="accordion" id="quest-accordion">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#first-quest" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
        {{firstQuest.name}}
      </button>
    </h2>
    <div id="first-quest" class="accordion-collapse collapse">
      <div class="accordion-body" style="display: flex; flex-direction: column;">
        {{firstQuest.description}}
        <a class="btn btn-danger" href="/quests/{{firstQuest.id}}">Check this Quest Out!</a>
      </div>
    </div>
  </div>
