<div class="accordion" id="rule-accordion">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#first-rule" aria-expanded="false" aria-controls="first-rule">
        {{firstRule.title}}
      </button>
    </h2>
    <div id="first-rule" class="accordion-collapse collapse">
      <div class="accordion-body" style="display: flex; flex-direction: column;">
        {{firstRule.description}}
        <a class="btn btn-danger" href="/rules/{{firstRule.id}}">Check this Rule Out!</a>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#second-rule" aria-expanded="false" aria-controls="second-rule">
        {{secondRule.title}}
      </button>
    </h2>
    <div id="second-rule" class="accordion-collapse collapse">
      <div class="accordion-body" style="display: flex; flex-direction: column;">
        {{secondRule.description}}
        <a class="btn btn-danger" href="/rules/{{secondRule.id}}">Check this Rule Out!</a>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#third-rule" aria-expanded="false" aria-controls="third-rule">
        {{thirdRule.title}}
      </button>
    </h2>
    <div id="third-rule" class="accordion-collapse collapse">
      <div class="accordion-body" style="display: flex; flex-direction: column;">
        {{thirdRule.description}}
        <a class="btn btn-danger" href="/rules/{{thirdRule.id}}">Check this Rule Out!</a>
      </div>
    </div>
  </div>
</div>