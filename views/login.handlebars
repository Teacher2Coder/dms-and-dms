<div class="card login-card">
    <h1>Login</h1>
    <form id="login-form" action="/login" method="POST">
        <div class="login-input">
            <label class="field" for="username">Username:</label>
            <input class="field" type="text" id="username" name="username" required>
        </div>
        <div class="login-input">
            <label class="field" for="password">Password:</label>
            <input class="field" type="password" id="password" name="password" required>
        </div>
        <button class="btn btn-danger" type="submit">Login</button>
        <p id="error-message">{{error}}</p>
    </form>
</div>
<div class="card login-card">
    <h3>New here? Sign up now!</h3>
    <a class="btn btn-danger" id="register-btn" href="/register">Register</a>
</div>